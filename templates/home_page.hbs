<main id="main-content" class="nv-home">
  <!-- Hero Section -->
  <section class="nv-hero" style="background: linear-gradient(135deg, {{settings.hero.gradient_start}}, {{settings.hero.gradient_end}});">
    <h1>{{settings.hero.title}}</h1>
    <p class="hero-subtitle">{{settings.hero.subtitle}}</p>
    <form class="hero-search" role="search" action="/hc/{{help_center.locale}}/search">
      <input type="search" name="query" placeholder="{{settings.hero.search_placeholder}}" aria-label="{{settings.hero.search_placeholder}}" />
      <button type="submit">{{t 'search'}}</button>
    </form>
  </section>

  <!-- Top-Level Callout Cards -->
  <section class="top-callouts">
    {{#each settings.topCalls}}
      <div class="callout-card" style="background-color: {{this.card_color}};">
        <div class="card-icon" aria-hidden="true">{{this.icon}}</div>
        <h3>{{this.title}}</h3>
        <p>{{this.desc}}</p>
        <a href="{{this.action_url}}" class="card-action">{{this.action_label}} &rarr;</a>
      </div>
    {{/each}}
  </section>

  <!-- Knowledge Base Preview -->
  <section class="kb-preview">
    <div class="section-header">
      <h2>Knowledge Base</h2>
      <a href="{{settings.kb_view_all_url}}" class="view-all">View all articles</a>
    </div>
    <div class="kb-grid">
      {{#each settings.kbSections}}
        <div class="kb-card" style="background-color: {{this.card_color}};">
          <h3>{{this.title}}</h3>
          <ul>
            {{#each this.articles}}
              <li><a href="{{this.url}}">{{this.label}}</a></li>
            {{/each}}
          </ul>
          <a href="{{this.section_url}}" class="view-section">View full section</a>
        </div>
      {{/each}}
    </div>
  </section>

  <!-- Training Materials Carousel -->
  <section class="training-materials">
    <div class="section-header">
      <h2>Training Materials</h2>
      <a href="{{settings.training_view_all_url}}" class="view-all">View all training</a>
    </div>
    <div class="training-carousel" role="region" aria-label="Training Materials">
      {{#each settings.trainingItems}}
        <a href="{{this.url}}" class="training-card">
          <span class="badge">{{this.media_type}} &bull; {{this.media_info}}</span>
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <span class="updated">Updated {{this.updated_date}}</span>
        </a>
      {{/each}}
    </div>
  </section>

  <!-- Main Two-Column Content -->
  <section class="main-grid">
    <div class="calendar-panel">
      <div class="panel-header">
        <h2>Upcoming Deadlines</h2>
        <a href="{{settings.calendar_url}}" class="view-all">View full calendar</a>
      </div>
      <ul class="calendar-list">
        {{#each settings.calendarItems}}
          <li class="calendar-item">
            <div class="calendar-date">{{this.date}}</div>
            <div class="calendar-info">
              <h3>{{this.title}}</h3>
              <p>{{this.subtitle}}</p>
            </div>
            <span class="calendar-badge">{{this.days_left}} days left</span>
          </li>
        {{/each}}
      </ul>
    </div>

    <div class="forum-panel">
      <div class="panel-header">
        <h2>Community Forum</h2>
        <div class="panel-actions">
          <a href="{{settings.forum_url}}" class="view-all">View all discussions</a>
          <a href="{{settings.new_post_url}}" class="btn-secondary new-post">New Post</a>
        </div>
      </div>
      <ul class="forum-list">
        {{#each settings.forumItems}}
          <li class="forum-item">
            <h3><a href="{{this.url}}">{{this.title}}</a></h3>
            <p>{{this.snippet}}</p>
            <div class="forum-meta">
              <span class="author">{{this.author}}</span>
              <span class="replies">{{this.replies}} replies</span>
              <span class="tag">{{this.tag}}</span>
              <time datetime="{{this.timestamp}}">{{this.timestamp}}</time>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </section>

  <!-- Deadline Banner -->
  {{#if settings.deadline_banner.enabled}}
    <section class="deadline-banner">
      <div class="deadline-content">
        <div class="deadline-text">
          <h2>{{settings.deadline_banner.heading}}</h2>
          <p>{{settings.deadline_banner.subtext}}</p>
        </div>
        <div class="deadline-actions">
          <a href="{{settings.deadline_banner.primary_url}}" class="btn-primary">{{settings.deadline_banner.primary_label}}</a>
          <a href="{{settings.deadline_banner.secondary_url}}" class="btn-secondary">{{settings.deadline_banner.secondary_label}}</a>
        </div>
      </div>
    </section>
  {{/if}}
</main>

