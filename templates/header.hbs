<a class="skip-navigation" tabindex="1" href="#main-content">{{t 'skip_navigation'}}</a>

{{#if settings.alert.enabled}}
  <div class="alert-banner" style="background-color: {{settings.alert.bg_color}}; color: {{settings.alert.text_color}};" role="alert">
    <span class="alert-message">
      {{#if settings.alert.link}}
        <a href="{{settings.alert.link}}">{{settings.alert.text}}</a>
      {{else}}
        {{settings.alert.text}}
      {{/if}}
    </span>
    <button class="alert-close" aria-label="{{t 'close'}}">&times;</button>
  </div>
{{/if}}

<header class="nv-header">
  <div class="header-left">
    {{#link 'help_center'}}
      <img src="{{settings.header.logo}}" alt="{{settings.header.title}}" class="brand-logo" />
      <div class="brand-text">
        <span class="brand-title">{{settings.header.title}}</span>
        <span class="brand-subtitle">{{settings.header.subtitle}}</span>
      </div>
    {{/link}}
  </div>

  <nav class="header-nav" aria-label="Primary">
    <ul>
      {{#each settings.header.nav_links}}
        <li><a href="{{this.url}}">{{this.label}}</a></li>
      {{/each}}
    </ul>
  </nav>

  <div class="header-right">
    <form class="header-search" role="search" action="/hc/{{help_center.locale}}/search">
      <input type="search" name="query" placeholder="{{settings.header.search_placeholder}}" aria-label="{{settings.header.search_placeholder}}" />
    </form>
    <a href="{{settings.header.submit_url}}" class="btn-primary submit-ticket">{{settings.header.submit_label}}</a>

    {{#if signed_in}}
      <div class="user-info dropdown">
        <button class="dropdown-toggle" aria-haspopup="true">
          {{user_avatar class="user-avatar"}}
          <span class="sr-only">{{t 'user_menu'}}</span>
        </button>
        <div class="dropdown-menu" role="menu">
          {{#my_profile role='menuitem'}}{{t 'profile'}}{{/my_profile}}
          {{link 'requests' role='menuitem'}}
          {{link 'sign_out' role='menuitem'}}
        </div>
      </div>
    {{else}}
      {{link 'sign_in' class='sign-in'}}
    {{/if}}
  </div>
</header>

